  adPlaceId      Int?
  AdPlaceDraft   AdPlaceDraft? @relation(fields: [adPlaceDraftId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  adPlaceDraftId Int?

  @@unique([title, lat, lng, status])
  @@index([lat, lng, id])
  @@index([nationalCode, regionCode1, id])
  @@index([nationalCode, regionCode1, regionCode2, id])
}

model Hotel {
