{
  "name": "travelit-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "hjkangIB <hjkang@idealbloom.io>",
  "license": "MIT",
  "scripts": {
    "pm2": "pm2",
    "start:dev": "pm2 start ecosystem.config.js --env development",
    "start:prod": "pm2 start ecosystem.config.js --env production",
    "start": "yarn start:dev",
    "stop": "pm2 delete $(exec pm2 list | awk '/travelit-api/ {print $2}')",
    "restart": "yarn stop; yarn start",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "format": "prettier --write \"src/**/*.{ts,tsx,js, json,html}\"",
    "build": "tsc -p .",
    "prepare": "husky install",
    "migrate": "prisma migrate dev",
    "generate": "prisma generate",
    "seed": "ts-node ./src/prisma/seeds",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage",
    "batch": "yarn batch:dataresource",
    "batch:dataresource": "yarn ts-node -r tsconfig-paths/register ./src/timer/dailyBatchJob.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js, jsx, ts, tsx}": [
      "npm run  eslint",
      "npm run format"
    ]
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/google.maps": "^3.49.2",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bcrypt": "^5.0.1",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "prisma": "^3.11.1",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.2",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@prisma/client": "3.11.1",
    "@types/async": "^3.2.15",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.1",
    "@types/exceljs": "^1.3.0",
    "@types/express-serve-static-core": "^4.17.28",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.9.3",
    "@types/nodemailer": "^6.4.6",
    "@types/passport": "^1.0.7",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "async": "^3.2.4",
    "axios": "^0.26.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.8",
    "eslint-import-resolver-typescript": "^2.7.1",
    "express": "^4.17.3",
    "jest": "^27.5.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.8.0",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "uuid": "^9.0.0"
  }
}
